<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="PetFriend.Views.PetViewPage">
	<ContentPage.Content>


        <StackLayout Margin="20,20,20,20">
            <Label Text="Pet" HorizontalTextAlignment="Center" Margin="0,0,0,20"
                    BackgroundColor="#38ada9" FontSize="30" FontAttributes="Bold"/>

            
            <Label Text="Name" FontAttributes="Bold" FontSize="20"/>
            <Label x:Name="name_entry" HeightRequest="35" Margin="0,0,0,10"/>

            <Label Text="Type of Pet" FontAttributes="Bold" FontSize="20"/>
            <Label x:Name="type_picker" Margin="0,0,200,10"/>

            <Label Text="Gender" BackgroundColor="#38ada9" Margin="0,0,220,0" FontAttributes="Bold" FontSize="20"/>
            <Label x:Name="gender_picker" Margin="0,0,250,10" />

            <Label Text="Age" FontAttributes="Bold" FontSize="20"/>
            <Label x:Name="age_picker" Margin="0,0,250,10" />

            <Label Text="RFID" FontAttributes="Bold" FontSize="20"/>
            <Label x:Name="rfid_entry" HeightRequest="35" Margin="0,0,180,10" />

            <Button Text="Profile Picture"  TextColor="#38ada9" BackgroundColor="#f1f2f6" Margin="20,20"/>

            
        </StackLayout>
        
	</ContentPage.Content>
</ContentPage>
